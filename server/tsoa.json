{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/*Controller.ts"],
    "spec": {
      "outputDirectory": "src",
      "specVersion": 3
    },
    "routes": {
      "routesDir": "src"
    },
    "compileOnSave": true,
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@controllers/*": ["src/controllers/*"],
        "@services/*": ["src/services/*"]
      }
    }
  }